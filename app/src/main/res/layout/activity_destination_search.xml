<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/Search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_background1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mary Rose N. Rangis"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Search_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rounded_background">

                <DatePicker
                    android:id="@+id/calendarPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:padding="15dp"
                android:background="@drawable/rounded_background">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/place_1"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="France"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    />

                <TextView
                    android:id="@+id/description_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The captivating country renowned for its rich history, cultural heritage, exquisite cuisine, stunning landscapes, and elegant art and fashion."
                    android:layout_marginStart="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:lines="5"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_2"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Switzerland"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="4"
                    android:text="Majestic Swiss Alps, pristine lakes, and charming cities offer breathtaking natural beauty and a haven for outdoor enthusiasts."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_3"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Japan"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="5"
                    android:text="From cherry blossoms in spring to serene temples, vibrant cityscapes, and traditional gardens, Japan is a fusion of ancient traditions and modern marvels."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_4"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Italy"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="5"
                    android:text="A country of timeless beauty, Italy enchants with its iconic landmarks, picturesque coastlines, Renaissance art, and delectable cuisine."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_5"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="New Zealand"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="5"
                    android:text="With its awe-inspiring landscapes, dramatic mountains, pristine lakes, and adventure activities, New Zealand is a paradise for nature lovers and thrill-seekers."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_6"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Greece"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="6"
                    android:text="From the iconic blue-domed churches of Santorini to ancient ruins like the Acropolis and stunning beaches, Greece offers a blend of history, mythology, and coastal beauty."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_7"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Canada"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="6"
                    android:text="Vast wilderness, majestic mountains like the Rockies, stunning national parks, and vibrant cities make Canada a dream destination for nature enthusiasts and urban explorers alike."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_8"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Brazil"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="5"
                    android:text="Brazil mesmerizes with its Amazon rainforest, breathtaking Iguazu Falls, vibrant cities like Rio de Janeiro, and stunning beaches like Copacabana and Ipanema."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_9"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Norway"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="5"
                    android:text="Fjords that cut through towering cliffs, the mesmerizing Northern Lights, and charming coastal towns make Norway a picture-perfect Scandinavian gem."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/place_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:src="@drawable/place_10"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:id="@+id/placeName10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Australia"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:lines="7"
                    android:text="From the iconic Sydney Opera House and Great Barrier Reef to stunning coastal drives along the Great Ocean Road and the rugged Outback, Australia showcases diverse landscapes and unique wildlife."
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    
    <!-- Add appropriate UI components to display the fetched destination information -->

</RelativeLayout>
