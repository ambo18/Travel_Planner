<!-- activity_itinerary_creation.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnFrance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="France"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnSwitzerland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switzerland"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnJapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Japan"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnItaly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Italy"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnNew_Zealand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Zealand"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnGreece"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Greece"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnCanada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canada"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnBrazil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brazil"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnNorway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Norway"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Button
                android:id="@+id/btnAustralia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
