<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background">

        <!-- Booking details components -->
        <TextView
            android:id="@+id/bookingTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/bookingDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

        <!-- Additional components for displaying booking details -->
        <TextView
            android:id="@+id/bookingDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/bookingPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="15dp">

        <!-- Booking details components -->
        <TextView
            android:id="@+id/bookingTitleTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/bookingDetailsTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

        <!-- Additional components for displaying booking details -->
        <TextView
            android:id="@+id/bookingDateTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/bookingPriceTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginStart="15dp"/>

    </LinearLayout>

    <!-- Add more components as needed -->

</LinearLayout>
